{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/todogroup/repolinter/master/rules/file-hash-config.json",
  "type": "object",
  "properties": {
    "globsAny": {
      "type": "array",
      "items": { "type": "string" }
    },
    "nocase": {
      "type": "boolean",
      "default": false
    },
    "algorithm": {
      "type": "string",
      "default": "sha256"
    },
    "succeed-on-non-existent": {
      "type": "boolean",
      "default": false
    },
    "hash": { "type": "string" }
  },
  "required": ["hash"],
  "oneOf": [{ "required": ["globsAny"] }, { "required": ["files"] }]
}
