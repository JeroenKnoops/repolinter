{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/todogroup/repolinter/master/rules/file-no-broken-links-config.json",
  "type": "object",
  "properties": {
    "nocase": {
      "type": "boolean",
      "default": false
    },
    "globsAll": {
      "type": "array",
      "items": { "type": "string" }
    },
    "succeed-on-non-existent": {
      "type": "boolean",
      "default": false
    },
    "pass-external-relative-links": {
      "type": "boolean",
      "default": false
    }
  },
  "required": ["globsAll"]
}
