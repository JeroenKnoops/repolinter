{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/prototypicalpro/repolinter/master/rules/git-grep-commits-config.json",
    "type": "object",
    "properties": {
        "denylist": {
            "type": "array",
            "items": { "type": "string" }
        },
        "ignoreCase": {
            "type": "boolean",
            "default": false
        }
    },
    "required": ["denylist"]
}
