{
    "$schema": "./schema.json",
    "axioms": {
        "linguist":"language",
        "licensee":"license",
        "packagers":"packager"
    },
    "rules": {
        "license-file-exists": {
            "level": "error",
            "rule": {
                "type": "file-existence",
                "options": {
                    "files": ["LICENSE*", "COPYING*"], 
                    "nocase": true
                }
            },
            "fix": {
                "type": "file-write",
                "options": {
                    "files": ["git@github.com/..."],
                    "overwrite": true
                }
            }
        },
        "readme-has-community-header": {
            "level": "error",
            "rule": {
                "type": "file-starts-with",
                "options": {
                    "files": ["README*"], 
                    "lineCount": 1, 
                    "patterns": ["\\!\\[\\s*Community\\s*Project\\s*Header\\s*\\]\\(https\\:\\/\\/github.com\\/newrelic\\/[\\/\\.a-z0-9\\-\\_\\~]+\\)"], 
                    "flags": "i", 
                    "succeed-on-non-existent": true
                }
            },
            "fix": {
                "type": "file-modify",
                "options": {
                    "text": "git@github.com/...",
                    "write_mode": "append"
                }
            }
        }
    }
}